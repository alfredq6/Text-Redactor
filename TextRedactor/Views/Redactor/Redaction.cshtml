@model RedactionViewModel

<div class="container-fluid flex-container">
    <div>
        <a class="btn btn-danger block-float-right" id="btn-log-out" asp-controller="Account" asp-action="SignOut" onmouseenter="ChangeToLogOut('LogOut')" onmouseleave="ChangeToName('@User.Identity.Name')">@User.Identity.Name</a>
    </div>
    <div class="head-text container-fluid">
        Enter something and the application detect word's languages
    </div>
</div>
<div class="container flex-container">
    <div>
        <textarea class="form-control" placeholder="Enter something" rows="5"></textarea>
    </div>
    <button class="btn btn-info" id="btn-suc">Detect</button><br />
    <div class="text-block">
        <div id="correct_text"></div>
    </div>
    <table class="table-bordered table-responsive" id="top-requests-table">
        <tr class="table-head">
            <th>#</th>
            <th>User</th>
            <th>Queries count</th>
            <th>Last login time</th>
            <th>Average time between queries in minutes</th>
        </tr>
    </table>
</div>